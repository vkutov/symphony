{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-vertical" enctype="multipart/form-data" action="{{ path('customer_add') }}" method="POST">
                <fieldset>
                    <legend>Add new Customer</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="name" placeholder="Name"
                                   name="customer[name]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="birtDate">Birth date</label>
                        <div class="col-sm-4 ">
                            <input type="date" class="form-control" id="birtDate" placeholder="Birth date"
                                   name="customer[birtDate]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="isYoungDriver">Is young driver</label>
                        <div class="col-sm-4 ">
                            <label class="col-sm-4 control-label" for="isYoungDriver"> <input type="radio"
                                   name="customer[isYoungDriver]" value="Yes" id="isYoungDriver_Yes" placeholder="Is young driver" >yes</label>
                            <label class="col-sm-4 control-label" for="isYoungDriver"> <input type="radio"
                                   name="customer[isYoungDriver]" value="No" id="isYoungDriver_No" placeholder="Is young driver">no</label>
                        </div>
                    </div>


                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('customer_add') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}

