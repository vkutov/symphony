{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for part in parts %}
            <tr>
                <td><a href="{{ path('part_show', { 'id': part.id }) }}">{{ part.id }}</a></td>
                <td>{{ part.name }}</td>
                <td>{{ part.price }}</td>
                <td>{{ part.quantity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('part_show', { 'id': part.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
